{
  "include": ["src/**/*", "test/*"],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "module": "es6",
    "target": "es6",
    "outDir": "./public/js/",
    "moduleResolution": "node",

    // es2020.string: enable string.matchAll
    // ref: https://stackoverflow.com/a/57298833/87207
    //
    // dom.iterable: enable URLSearchParams().keys()
    // ref: https://github.com/microsoft/TypeScript/issues/38139#issuecomment-618603173
    "lib": ["es2020.string", "dom.iterable", "dom"],

    "noImplicitAny": true,
    "strict": true,
  }
}